<div class="body">
<p><a href="/gift/add">Add a Gift</a></p>

{{#if results}}
<div class="search_results">
  <table>
    <tr>
      <td>Gift</td>
      <td>Price</td>
      <td>Tags</td>
    </tr>
    {{#each results}}
    <tr>
      <td>
          {{#if this.name}}
            {{#if this.url}}
              <a href="{{this.url}}">{{this.name}}</a>
            {{else}}{{this.name}}{{/if}}
          {{else}}N/A{{/if}}
      </td>
      <td>{{#if this.price}}{{this.price}}{{else}}N/A{{/if}}</td>
      <td>{{#if this.url}}{{this.url}}{{else}}N/A{{/if}}</td>
    </tr>
    {{/each}}
  </table>
</div>
{{else}}
<p>No gifts in your list.</p>
{{/if}}
</div>
