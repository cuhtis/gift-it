<script src="/javascript/tags.js"></script>
<script src="/javascript/options.js"></script>
<div class="body">
<form method="POST">
  <div class="box">
    <p>
      <label for="name">Event:</label>
      <input name="name" type="text" required>
    </p>
    <p>
      <label for="date">Date:</label>
      <input name="date" type="date" required>
    </p>
    <p>
      <label for="privacy">Privacy:</label>
      <select name="privacy">
        <option value="public">Public</option>
        <option value="private">Private</option>
      </select>
    </p>
  </div>
  <br>
  <div class="box" id="tags">
    Tags
    <p>
      <input name="tag" type="text">
      <button class="btn" id="add_tag">+</button>
      <button class="btn" id="rem_tag">-</button>
    </p>
  </div>
  <br>
  <div class="box" id="options">
    Gifts
    <p>
      <select name="gift">
        <option value="">- Select Gift -</option>
        {{#each events}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
      <button class="btn" id="add_evt">+</button>
      <button class="btn" id="rem_evt">-</button>
    </p>
  </div>
  <br>
  <input class="btn" type="submit" value="Add Event">
</form>
</div>
