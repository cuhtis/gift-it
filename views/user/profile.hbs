<div class="body">
<h4>{{account.username}}</h4>
<table>
  <tr><td class="col1">Name</td><td>{{account.first_name}} {{account.last_name}}</td></tr>
  <tr><td class="col1">Email</td><td>{{account.email}}</td></tr>
  <tr><td class="col1">Birthday</td><td>{{account.birthday}}</td></tr>
  <tr><td class="col1">Age</td><td>{{age}}</td></tr>
</table>
<br>
{{#if myAccount}}
<p><a href="/user/{{account.username}}/wishlist">View my wishlist</a></p>
<p><a href="/settings">Update account information</a></p>
{{else}}
<p><a href="/user/{{account.username}}/wishlist">View {{account.first_name}}'s wishlist</a></p>
{{#if user}}
{{#if isFriend}}
<p>You are friends with {{account.first_name}}!</p>
{{else}}
<p><a href="/user/{{account.username}}/add_friend">Add {{account.first_name}} as a Friend</a></p>
{{/if}}
{{/if}}
{{/if}}
</div>
